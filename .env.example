# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_STORAGE_BUCKET=your-storage-bucket
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Firebase Auth
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_DEPOSIT_AMOUNT=20
STRIPE_DEPOSIT_TYPE=fixed

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Cloud Messaging
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# WhatsApp Business API
WHATSAPP_BUSINESS_ID=your-whatsapp-business-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# SendGrid / Email
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yoursalon.com
FROM_NAME=Your Salon Name

# JWT
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Salon Configuration
SALON_NAME=Your Salon Name
SALON_ADDRESS=123 Main Street, City, State 12345
SALON_PHONE=+1-555-123-4567
SALON_EMAIL=contact@yoursalon.com
SALON_TIMEZONE=America/New_York

# URLs
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
BCRYPT_SALT_ROUNDS=10

# Notification Settings
REMINDER_24H_ENABLED=true
REMINDER_2H_ENABLED=true
SMS_ENABLED=true
EMAIL_ENABLED=true
WHATSAPP_ENABLED=false

# Cancellation Policy (in hours)
FREE_CANCELLATION_HOURS=24
LATE_CANCELLATION_FEE=50
LATE_CANCELLATION_FEE_TYPE=percentage
NO_SHOW_FEE=100
NO_SHOW_FEE_TYPE=percentage
MAX_NO_SHOWS_BEFORE_PENALTY=2

# Loyalty Program
LOYALTY_ENABLED=true
LOYALTY_POINTS_PER_DOLLAR=1

# Buffer Time (minutes between appointments)
BUFFER_TIME_MINUTES=15
