rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isManager() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    function isEmployee() {
      return isAuthenticated() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee' || isManager());
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow create, delete: if isManager();
    }

    match /services/{serviceId} {
      allow read: if true;
      allow write: if isManager();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isManager();
    }

    match /appointments/{appointmentId} {
      allow read: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.employeeId == request.auth.uid ||
        isManager()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.employeeId == request.auth.uid ||
        isManager()
      );
      allow delete: if isManager();
    }

    match /{document=**} {
      allow read, write: if isManager();
    }
  }
}
